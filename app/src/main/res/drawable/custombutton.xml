<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--渐变1-->
    <item
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="20dp">
        <shape android:shape="rectangle" >
            <!--设置渐变色-->
            <gradient
                android:angle="45"
                android:startColor="#f03e88"
                android:endColor="#8f01d5" />
            <!--设置角的弧度-->
            <corners
                android:topLeftRadius="8dp"
                android:topRightRadius="8dp" />
        </shape>
    </item>

    <!--渐变2-->
    <item
        android:top="20dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle" >
            <!--设置渐变色-->
            <gradient
                android:angle="135"
                android:startColor="#8f01d5"
                android:endColor="#f03e88" />
            <!--设置角的弧度-->
            <corners
                android:bottomLeftRadius="12dp"
                android:bottomRightRadius="12dp" />
        </shape>
    </item>
    <!--设置边框-->
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#862501" />
        </shape>
    </item>
</layer-list>